root = true

[*.cs]

# Usar var em vez do tipo explícito
dotnet_diagnostic.IDE0007.severity = error
dotnet_diagnostic.IDE0008.severity = error
csharp_style_var_for_built_in_types = true
csharp_style_var_when_type_is_apparent = true
csharp_style_var_elsewhere = true

# Use inicializadores de coleção
dotnet_diagnostic.IDE0028.severity = suggestion
dotnet_style_collection_initializer = true:suggestion
when_types_loosely_match = true:suggestion

# Adicionar modificador somente leitura
dotnet_diagnostic.IDE0044.severity = warning
dotnet_style_readonly_field = true:warning

# Preferência por interpolação de strings
dotnet_diagnostic.IDE0071.severity = suggestion
dotnet_style_prefer_simplified_interpolation = true:suggestion

# Simplificar a expressão new
dotnet_diagnostic.IDE0090.severity = warning

# A verificação de nulidade pode ser simplificada (se houver verificação de nulidade)
dotnet_diagnostic.IDE0270.severity = suggestion
dotnet_style_coalesce_expression = true:suggestion

# Usar chamada de delegate condicional
dotnet_diagnostic.IDE1005.severity = suggestion
csharp_style_conditional_delegate_call = true:suggestion

# Remover variáveis não utilizados
dotnet_diagnostic.CS0219.severity = warning

# dotnet_diagnostic rules are supported
dotnet_diagnostic.CS1058.severity = warning

# Usar tipos concretos quando possível para melhorar o desempenho
dotnet_diagnostic.CA1859.severity = none
